<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="myJpa">
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.DerbyTenSevenDialect"/>
            <property name="hibernate.hikari.dataSourceClassName"
                      value="org.apache.derby.jdbc.ClientDriver"/>
            <property name="hibernate.hikari.dataSource.url"
                      value="jdbc:derby://localhost:1527//home/bochenlong/derbys/mydb"/>
            <property name="hibernate.hikari.dataSource.user" value="app"/>
            <property name="hibernate.hikari.dataSource.password" value="app"/>
            <property name="hibernate.max_fetch_depth" value="3"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>